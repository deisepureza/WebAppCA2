<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <!--getting the nav of the doc from navigation.ejs-->
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
        <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="/img/WINEHOUSEABACKTOBLAC.png" alt="A RECORD">
                </div>
                <div class="card__content">
                    <h2 class="product__price">Â£21.99</h2>
                    <p class="product__description">Black to Black Vinyl!</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
            </article>
        <% } %>    
        </div>
        <% } else { %>
            <h1>No Records Found!</h1>
        <% } %>
    </main>
    <!--getting the closing of the doc from end.ejs-->
    <%- include('includes/end.ejs') %>